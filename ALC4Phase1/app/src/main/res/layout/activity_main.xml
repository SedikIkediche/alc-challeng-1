<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MainActivity">

        <androidx.appcompat.widget.AppCompatImageView
                android:src="@drawable/alc_photo"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:foreground="@drawable/gradient_color"
                android:tint="#33000000"
                android:layout_height="match_parent"
                android:id="@+id/appCompatImageView"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome \nto ALC 4.0"
            android:textSize="48dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="180dp"
            app:layout_constraintTop_toTopOf="@+id/appCompatImageView"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView"/>
    <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="profile"
            android:background="@drawable/button_background"
            android:textColor="@android:color/white"
            android:drawableEnd="@drawable/arrow_forward"
            android:drawablePadding="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/profile_button"/>
    <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="about alc"
            android:background="@drawable/button_background"
            android:textColor="@android:color/white"
            android:drawableEnd="@drawable/arrow_forward"
            android:drawablePadding="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="15dp"
            android:id="@+id/about_alc_button"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
